{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist/",
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./node_modules"
    ]
}
